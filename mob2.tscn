[sub_resource type="GDScript" id="GDScript_igh4l"]
script/source = "class_name Mob2 extends CharacterBody2D

@export var speed = 200
@export var attack = 512
@export var health = 512
var max_health

var playerpos: Vector2

func move_to_player(ppos):
	playerpos = ppos

func damage(dam, move):
	health -= dam
	speed -= move
	if health <= 0:
		attack = 0
		var tween = create_tween()
		tween.tween_property(self, \"modulate\", Color(0, 0, 0 ,0), 2)
		GSignals.heal.emit(max_health)
		GSignals.addscore.emit(2)
		await get_tree().create_timer(2).timeout
		self.queue_free()

func end():
	self.queue_free()

func _ready() -> void:
	GSignals.pos.connect(move_to_player)
	GSignals.wipe.connect(damage)
	GSignals.dead.connect(end)

func _physics_process(_delta: float) -> void:
	if speed < 200:
		speed += 1
	var direction := global_transform.origin.direction_to(playerpos)
	velocity = direction * speed
	move_and_slide()
"

