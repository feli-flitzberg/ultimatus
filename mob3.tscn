script/source = "class_name Mob3 extends CharacterBody2D

@export var speed = 150
@export var attack = 1024
@export var health = 1024
var max_health
var pause

var playerpos: Vector2

func move_to_player(ppos):
	playerpos = ppos

func damage(dam):
	health -= dam
	speed = -600
	$Label.visible = true
	var tween = create_tween()
	if health <= 0:
		attack = 0
		speed -= 1200
		GSignals.heal.emit(max_health)
		GSignals.addscore.emit(8)
		tween.tween_property($AnimatedSprite2D, \"modulate\", Color(0, 0, 0 ,0), 3.0)
		tween.finished.connect(self.queue_free)
	else:
		tween.tween_property($AnimatedSprite2D, \"modulate\", Color(1, 0, 0, 0.5), 1.5)
		tween.tween_property($AnimatedSprite2D, \"modulate\", Color(1, 1, 1, 1), 1.5)
		$Label.visible = false

func paused():
	pause = true
	speed = 0

func unpaused():
	pause = false
	speed = 150

func end():
	self.queue_free()

func _ready() -> void:
	GSignals.pos.connect(move_to_player)
	GSignals.wipe.connect(damage)
	GSignals.dead.connect(end)
	GSignals.pause.connect(paused)
	GSignals.unpause.connect(unpaused)

func _physics_process(_delta: float) -> void:
	if speed < 150:
		if pause == true:
			pass
		else:
			speed += 10
	var direction := global_transform.origin.direction_to(playerpos)
	if speed < 0:
		pass
	else:
		velocity = direction * speed
		move_and_slide()
"

